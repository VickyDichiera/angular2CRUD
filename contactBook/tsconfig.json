{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "filesGlob": [
            "**/*.ts",
            "!dist/**",
            "!node_modules/**",
            "node_modules/@types/**/*.d.ts",
            "node_modules/@angular/**/*.d.ts"
        ],
}
